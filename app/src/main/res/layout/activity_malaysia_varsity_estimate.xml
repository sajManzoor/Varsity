<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00AEF3">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:CardView="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="my.firstApp.sajid.versity.MalaysiaVarsityEstimate"
        android:background="#00AEF3">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/estImg"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="430dp"
            CardView:cardCornerRadius="7dp"
            CardView:contentPadding="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="7dp"
            CardView:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView11"
                android:layout_marginTop="40dp"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/biglogo"
                android:layout_alignTop="@+id/estImg"
                android:layout_alignParentStart="true" />


            <View
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="1dp"
                android:id="@+id/line"
                android:background="#967676"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/estName"
                android:layout_marginTop="215dp"
                android:layout_alignBottom="@+id/estImg"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginLeft="20dp"
                android:text="@string/varstimate"
                android:id="@+id/tvesttext"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:rcMax="100"
                app:rcRadius="10dp"
                android:id="@+id/rcp"
                app:rcBackgroundPadding="5dp"
                app:rcReverse="false"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:rcProgressColor="#fbff06"
                app:rcBackgroundColor="#0b0a0a"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="20dp"
                android:text="Application Fee : $40"
                android:id="@+id/textView38"
                android:layout_alignBottom="@+id/estImg"
                android:layout_alignParentStart="true" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/est10"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            CardView:cardCornerRadius="7dp"
            CardView:contentPadding="0dp"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="7dp"
            app:cardBackgroundColor="#ebbabab4"
            CardView:cardUseCompatPadding="true">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/list"
                android:layout_alignTop="@+id/my1"
                android:layout_alignParentStart="true"
                android:padding="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/varsitySugg"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"

                />
        </android.support.v7.widget.CardView>






    </RelativeLayout>
</ScrollView>