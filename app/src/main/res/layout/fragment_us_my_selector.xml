<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00AEF3">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00AEF3">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/my1"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="195dp"
        CardView:cardCornerRadius="7dp"
        CardView:contentPadding="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        CardView:cardBackgroundColor="#EDEDED"
        CardView:cardUseCompatPadding="true">

     <!--   <com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/mas2"
            app:siRadius="15dp"
            app:siBorderWidth="2dp"
            app:siBorderColor="@color/colorBackground"
            app:siSquare="false"
            android:layout_centerHorizontal="true" />-->

        <com.joooonho.SelectableRoundedImageView
            android:layout_height="140dp"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:src="@drawable/mas2"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="0dip"
            app:sriv_right_top_corner_radius="0dip"
            app:sriv_left_bottom_corner_radius="0dip"
            app:sriv_right_bottom_corner_radius="0dip"
            app:sriv_border_width="0dip"
            app:sriv_border_color="#ffffff"
            app:sriv_oval="false" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/malaysia"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="145dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#6e3838"/>



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/my1"
        android:id="@+id/my2"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="195dp"
        android:layout_margin="4dp"
        CardView:cardCornerRadius="7dp"
        CardView:cardBackgroundColor="#EDEDED"
        CardView:contentPadding="0dp"
        CardView:cardUseCompatPadding="true">>


        <!--<com.github.siyamed.shapeimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/usfg"
            app:siRadius="15dp"
            app:siBorderWidth="2dp"
            app:siBorderColor="@color/colorBackground"
            app:siSquare="false"
            android:layout_centerHorizontal="true" />-->

        <com.joooonho.SelectableRoundedImageView
            android:layout_height="140dp"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image2"
            android:src="@drawable/usfg"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="0dip"
            app:sriv_right_top_corner_radius="0dip"
            app:sriv_left_bottom_corner_radius="0dip"
            app:sriv_right_bottom_corner_radius="0dip"
            app:sriv_border_width="0dip"
            app:sriv_border_color="#ffffff"
            app:sriv_oval="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/usa"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="145dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#6e3838"
            />

    </android.support.v7.widget.CardView>




</RelativeLayout>
    </ScrollView>